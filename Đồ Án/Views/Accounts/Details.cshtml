@model Assignment.Data.Entities.Account

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
                <h3>@Model.Avatar</h3>
            </div>
        </div>
        <div class="row ">
            <div class=" col-sm-4">
                <img src="~/images/@Model.Avatar" class="img-thumbnail border-0" alt="@Model.UserName">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <a class="w-100 btn btn-success text-white fw-bold text-decoration-none" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                </div>
                <div class="btn btn-secondary mt-5">
                    <img src="~/images/icon/arrow-left-circle-fill.svg">
                    <a asp-action="Index" class="text-decoration-none fw-bold text-white">Back to List</a>
                </div>
            </div>
            <div class="col-sm-8">
                <div>
                    <div class="info-table table-responsive">
                        <table class="table text-nowrap">
                            <tbody>
                                <tr>
                                    <td>ID: </td>
                                    <td class="fw-bold">@Model.Id</td>
                                </tr>
                                <tr>
                                    <td>User Name:</td>
                                    <td class="fw-bold">@Model.UserName</td>
                                </tr>
                                <tr>
                                    <td>Full Name:</td>
                                    <td class="fw-bold">@Model.FullName</td>
                                </tr>
                                <tr>
                                    <td>Gender:</td>
                                    <td class="fw-bold">@Model.Gender</td>
                                </tr>
                                <tr>
                                    <td>Address:</td>
                                    <td class="fw-bold">@Model.Address</td>
                                </tr>
                                <tr>
                                    <td>Email:</td>
                                    <td class="fw-bold">@Model.Email</td>
                                </tr>
                                <tr>
                                    <td>Phone Number:</td>
                                    <td class="fw-bold">@Model.PhoneNumber</td>
                                </tr>
                                <tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

