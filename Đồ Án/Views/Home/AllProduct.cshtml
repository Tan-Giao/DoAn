@*  @model Assignment.Models.SearchModel  *@
@model IEnumerable<Assignment.Data.Entities.Product>

@{
    ViewData["Title"] = "AllProduct";
    int currentTab = Convert.ToInt16(ViewData["tab"]);
    int total = Convert.ToInt16(ViewData["total"]);
    int totalTab = (int)Math.Ceiling((double)total / 10);
    int i = Convert.ToInt16(ViewData["tab"]) * 10 - 10;
}
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <h1 class="mb-4">Electronic Device Shop</h1>
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4">
                    <div class="col-xl-3">
                        <div class="input-group w-100 mx-auto d-flex">
                            <form asp-action="AllProduct" asp-route-id="SearchText">
                                <input type="hidden" class="form-control p-3" placeholder="Bạn cần tìm gì... "
                                       aria-describedby="search-icon-1">
                            </form>
                        </div>
                    </div>
                    <div class="col-6"></div>
                    <div class="col-xl-3">
                        <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                            <label for="fruits" class="text-nowrap">Sắp xếp:</label>
                            <select id="fruits" name="fruitlist" class="border-0 form-select-sm bg-light me-3"
                                    form="fruitform">
                                <option value="">Mặc định</option>
                                <option value="desc">Giá cao đến thấp</option>
                                <option value="asc">Giá thấp đến cao</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row g-4">
                    <div class="col-lg-3">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <h4>Loại sản phẩm</h4>

                                    <!-- Start Category -->

                                    <ul class="list-unstyled fruite-categorie">
                                        @*   @foreach (var item in Model.Products)
                                        { *@

                                        <li>
                                            <div class="d-flex justify-content-between fruite-name">
                                                <a><i class="fas fa-laptop me-2"></i>Laptop</a>
                                                <span>(7)</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="d-flex justify-content-between fruite-name">
                                                <a><i class="fas fa-mobile me-2"></i>Smart Phone</a>
                                                <span>(20)</span>
                                            </div>
                                        </li>

                                        @*   } *@
                                    </ul>
                                    <!-- End Category -->


                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <h4 class="mb-2">Giá</h4>

                                    <!-- Start Price -->

                                    <input type="range" title="Price" class="form-range w-100" id="rangeInput"
                                           name="rangeInput" min="0" max="500" value="0"
                                           oninput="amount.value=rangeInput.value">
                                    <output id="amount" name="amount" min-velue="0" max-value="500" for="rangeInput"
                                            class="fw-bold">0 </output>
                                    <span class="badge bg-success">$</span>


                                    <!-- End Price -->

                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <h4>Hãng</h4>

                                    <!-- Start Brand -->
                                    <div class="mb-2">
                                        <input type="radio" class="me-2" id="Categories-1" name="Categories"
                                               value="Samsung">
                                        <label for="Categories-1"> Samsung</label>
                                    </div>
                                    <div class="mb-2">
                                        <input type="radio" class="me-2" id="Categories-2" name="Categories"
                                               value="Apple">
                                        <label for="Categories-2"> Apple</label>
                                    </div>

                                    <!-- End Brand -->

                                </div>
                            </div>


                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <h4>Bộ nhớ</h4>

                                    <!-- Start Storage -->

                                    <div class="mb-2">
                                        <input type="radio" class="me-2" id="Categories-1" name="Categories-1"
                                               value="Beverages">
                                        <label for="Categories-1"> 512GB</label>
                                    </div>
                                    <div class="mb-2">
                                        <input type="radio" class="me-2" id="Categories-2" name="Categories-1"
                                               value="Beverages">
                                        <label for="Categories-2"> 1TB</label>
                                    </div>
                                    <!-- End Storage -->

                                </div>
                            </div>


                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <h4>RAM</h4>

                                    <!-- Start RAM -->

                                    <div class="mb-2">
                                        <input type="radio" class="me-2" id="Categories-1" name="Categories-1"
                                               value="Beverages">
                                        <label for="Categories-1"> 8GB</label>
                                    </div>
                                    <div class="mb-2">
                                        <input type="radio" class="me-2" id="Categories-2" name="Categories-1"
                                               value="Beverages">
                                        <label for="Categories-2"> 32TB</label>
                                    </div>
                                    <!-- End RAM -->

                                </div>
                            </div>

                            <div class="col-lg-12">
                                <h4 class="mb-3">Sản phẩm nổi bật</h4>
                                @foreach (var item in ViewBag.Get4Products)
                                {
                                    <div class="d-flex align-items-center justify-content-start">
                                        <div class="rounded me-4" style="width: 100px; height: 100px;">
                                            <img src="~/images/@item.ProductImage" class="img-fluid rounded" alt="">
                                        </div>
                                        <div>
                                            <h6 class="mb-2">@item.ProductName</h6>
                                            <div class="d-flex mb-2">
                                                <i class="fa fa-star text-warning"></i>
                                                <i class="fa fa-star text-warning"></i>
                                                <i class="fa fa-star text-warning"></i>
                                                <i class="fa fa-star text-warning"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                            <div class="d-flex mb-2">
                                                <h5 class="fw-bold me-2">@item.ProductPrice $</h5>
                                                <h5 class="text-danger text-decoration-line-through">
                                                    @(((float)(item.ProductPrice + (item.ProductPrice / 10))).ToString("0.00"))
                                                    $
                                                </h5>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="d-flex justify-content-center my-4">
                                    <a asp-action="AllProduct"
                                       class="btn border border-secondary px-4 py-3 rounded-pill text-primary w-100">
                                        Xem Thêm
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="position-relative">
                                    <a asp-action="ProductDetail" asp-route-id="19">
                                        <img src="~/images/1.png" class="img-fluid w-100 rounded" alt="">
                                        <div class="position-absolute"
                                             style="top: 50%; right: 10px; transform: translateY(-50%);">
                                            <h3 class="text-danger fw-bold">Bán <br> Chạy <br> Nhất</h3>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="row g-4 justify-content-center">
                              @foreach (var item in Model)
                            {
                            <div class="col-md-6 col-lg-6 col-xl-4">
                            <div class="rounded position-relative fruite-item">
                            <div class="fruite-img">
                            <img src="~/images/@item.ProductImage" class="img-fluid w-100 rounded-top" alt="">
                            </div>
                            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                            style="top: 10px; left: 10px;">
                            @item.Category.CategoryName
                            </div>
                            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                            <h4>@item.ProductName</h4>
                            <p class="text-truncate" style="max-width: 300px;" title="@item.ProductDescription">
                            @item.ProductDescription
                            </p>
                            <div class="d-flex justify-content-between flex-lg-wrap">
                            <p class="text-dark fs-5 fw-bold mb-0">@item.ProductPrice $</p>
                            <a href="#"
                            class="btn border border-secondary rounded-pill px-3 text-primary">
                            <i class="fa fa-shopping-bag me-2 text-primary"></i> Thêm vào giỏ hàng
                            </a>
                            </div>
                            </div>
                            </div>
                            </div>
                            }

                            <div class="col-12">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination pagination-lg justify-content-center">
                                        <li class="page-item" id="tabPreLi">
                                            <a class="page-link" asp-action="AllProduct" id="tabPre" asp-route-tab="@(currentTab-1==0?1:currentTab-1)" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        @for (int j = 1; j <= totalTab; j++)
                                        {
                                            <li class="page-item">
                                                <a asp-action="AllProduct" asp-route-tab="@j" class="page-link">
                                                    @j
                                                </a>
                                            </li>
                                        }
                                        <li class="page-item" id="tabNextLi">
                                            <a class="page-link" asp-action="AllProduct" id="tabNext" asp-route-tab="@(currentTab+1>totalTab?totalTab:currentTab+1)" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
