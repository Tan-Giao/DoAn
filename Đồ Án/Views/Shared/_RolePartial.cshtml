@using Microsoft.AspNetCore.Identity
@using Assignment.Data.Entities
@inject SignInManager<Account> SignInManager
@inject UserManager<Account> UserManager


<ul class="navbar-nav flex-grow-1">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user.Role == 1)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Product</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Index">Account</a>
            </li>
        }
    }

    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>

    }



</ul>
